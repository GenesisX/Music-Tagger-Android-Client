<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/widget0"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

<Button
    android:id="@+id/widget46"
    android:layout_width="158dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/song_edit_text"
    android:layout_marginBottom="29dp"
    android:text="Cancel" />

<TextView
    android:id="@+id/widget38"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/year_edit_text"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="14dp"
    android:text="Song" />

<Button
    android:id="@+id/widget45"
    android:layout_width="163dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/year_edit_text"
    android:text="Save" />

<EditText
    android:id="@+id/artist_edit_text"
    android:layout_width="322dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/widget47"
    android:layout_marginTop="22dp"
    android:ems="10"
    android:text="Muse"
    android:textSize="18sp" />

<TextView
    android:id="@+id/widget42"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/widget38"
    android:layout_below="@+id/artist_edit_text"
    android:layout_marginTop="16dp"
    android:text="Album" />

<EditText
    android:id="@+id/song_edit_text"
    android:layout_width="319dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/widget38"
    android:layout_marginTop="25dp"
    android:ems="10"
    android:text="Time is running out"
    android:textSize="18sp" />

<TextView
    android:id="@+id/widget44"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/year_edit_text"
    android:layout_alignLeft="@+id/widget42"
    android:layout_marginBottom="30dp"
    android:text="Year" />

<EditText
    android:id="@+id/year_edit_text"
    android:layout_width="318dp"
    android:layout_height="wrap_content"
    android:layout_above="@+id/widget46"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="14dp"
    android:ems="10"
    android:text="2"
    android:textSize="18sp" />

<EditText
    android:id="@+id/album_edit_text"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_above="@+id/widget44"
    android:layout_alignParentLeft="true"
    android:ems="10"
    android:text="Absolute"
    android:textSize="18sp" >

    <requestFocus />
</EditText>

<TextView
    android:id="@+id/widget47"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/widget38"
    android:layout_below="@+id/song_edit_text"
    android:layout_marginTop="14dp"
    android:text="Artist" />

</RelativeLayout>


